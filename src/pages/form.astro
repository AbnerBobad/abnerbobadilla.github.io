---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase.js';

// Fetch all students (for initial render)
const { data: studentsData, error: fetchError } = await supabase
  .from('student')
  .select('*')
  .order('created_at', { ascending: false });

const students = fetchError ? [] : studentsData;
---

<Layout title="Student Information Form">
  <section class="w-full min-h-screen py-20 md:py-26 bg-gradient-to-b from-[#0A0F24] via-[#1B2440] to-[#0F0A14] text-gray-200">
    <div class="max-w-6xl mx-auto px-6">
      <h1 class="text-center text-4xl md:text-6xl font-extrabold tracking-wide mb-16 text-cyan-300">
        Student Information Form
      </h1>

      <!-- Toast Notification Container -->
      <div id="toast-container" class="fixed top-6 right-6 z-50 flex flex-col gap-3"></div>

      <!-- Form Section -->
      <div class="bg-white/10 backdrop-blur-xl p-8 rounded-2xl shadow-xl border border-white/10 hover:border-cyan-300/60 transition duration-300 mb-10">
        <h2 class="text-3xl font-bold text-cyan-300 text-center mb-6">Add New Student</h2>

        <form id="student-form" class="space-y-6">
          <input type="hidden" id="edit-student-id" name="edit_student_id" value="">
          
          <!-- Name -->
          <div>
            <label for="name" class="block text-sm font-medium text-gray-200 mb-2">
              Full Name <span class="text-red-400">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-lg focus:ring-2 focus:ring-cyan-300 focus:border-cyan-300 text-gray-200 placeholder-gray-400"
              placeholder="Enter Full Name"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-200 mb-2">
              Email Address <span class="text-red-400">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-lg focus:ring-2 focus:ring-cyan-300 focus:border-cyan-300 text-gray-200 placeholder-gray-400"
              placeholder="name@example.com"
            />
          </div>

          <!-- Student ID -->
          <div>
            <label for="student_id" class="block text-sm font-medium text-gray-200 mb-2">
              Student ID <span class="text-red-400">*</span>
            </label>
            <input
              type="text"
              id="student_id"
              name="student_id"
              required
              class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-lg focus:ring-2 focus:ring-cyan-300 focus:border-cyan-300 text-gray-200 placeholder-gray-400"
              placeholder="e.g., 202292834"
            />
          </div>

          <!-- Course -->
          <div>
            <label for="course" class="block text-sm font-medium text-gray-200 mb-2">
              Course/Program
            </label>
            <input
              type="text"
              id="course"
              name="course"
              class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-lg focus:ring-2 focus:ring-cyan-300 focus:border-cyan-300 text-gray-200 placeholder-gray-400"
              placeholder="e.g., Information Technology"
            />
          </div>

          <!-- Submit Button -->
          <div class="flex gap-4">
            <button
              type="submit"
              id="submit-btn"
              class="flex-1 bg-cyan-500 hover:bg-cyan-400 text-gray-900 font-semibold py-3 px-6 rounded-lg transition-colors duration-300 shadow-lg hover:shadow-cyan-500/50"
            >
              Add Student
            </button>
            <button
              type="button"
              id="cancel-btn"
              class="hidden bg-red-500 hover:bg-red-400 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-300"
            >
              Cancel
            </button>
          </div>
        </form>
      </div>

      <!-- Display Students -->
      <div class="bg-white/10 backdrop-blur-xl rounded-2xl shadow-xl border border-white/10 hover:border-cyan-300/60 transition duration-300 p-8">
        <h2 class="text-3xl font-bold text-cyan-300 text-center mb-6">
          Registered Students ({students.length})
        </h2>

        {students.length === 0 ? (
          <p class="text-gray-400 text-center py-8">No students registered yet.</p>
        ) : (
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="bg-white/5">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-cyan-300 uppercase tracking-wider">Name</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-cyan-300 uppercase tracking-wider">Email</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-cyan-300 uppercase tracking-wider">Student ID</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-cyan-300 uppercase tracking-wider">Course</th>
                  <th class="px-6 py-3 text-center text-xs font-medium text-cyan-300 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-white/10">
                {students.map((student) => (
                  <tr class="hover:bg-white/5 transition duration-200">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-200">{student.name}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">{student.email}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">{student.student_id}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">{student.course || 'N/A'}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-center">
                      <button
                        class="edit-btn bg-blue-500 hover:bg-blue-400 hover:outline-[3px] hover:outline-black text-white px-4 py-2 rounded-lg mr-2 transition-colors"
                        data-id={student.id}
                        data-name={student.name}
                        data-email={student.email}
                        data-studentid={student.student_id}
                        data-course={student.course}
                      >
                        Edit
                      </button>
                      <button
                        class="delete-btn bg-red-500 hover:bg-red-400 hover:outline-[3px] hover:outline-black text-white px-4 py-2 rounded-lg transition-colors"
                        data-id={student.id}
                        data-name={student.name}
                      >
                        Delete
                      </button>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        )}
      </div>
    </div>
  </section>

  <script>
    let isEditing = false;

    const toastContainer = document.getElementById("toast-container");

    // Create toast
    function showToast(message, type = "success") {
      const colors = {
        success: "bg-green-600/90 text-white",
        error: "bg-red-600/90 text-white",
        info: "bg-cyan-600/90 text-white",
        edit: "bg-blue-600/90 text-white",
        delete: "bg-red-600/90 text-white",
        cancel: "bg-red-600/90 text-white",
      };

      const toast = document.createElement("div");
      toast.className = `px-5 py-3 rounded-xl shadow-lg text-sm font-medium animate-fade-in-down ${colors[type]} transition-transform duration-400`;
      toast.textContent = message;

      toastContainer.appendChild(toast);
      setTimeout(() => {
        toast.classList.add("opacity-0", "translate-x-5");
        setTimeout(() => toast.remove(), 500);
      }, 3000);
    }

    // Add/Update Student
    document.querySelector('#student-form').addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target;
      const formData = new FormData(form);
      const editStudentId = document.getElementById('edit-student-id').value;

      const data = {
        name: formData.get('name'),
        email: formData.get('email'),
        student_id: formData.get('student_id'),
        course: formData.get('course')
      };

      try {
        const endpoint = isEditing ? '../api/update-student' : '../api/add-student';
        const payload = isEditing ? { ...data, id: editStudentId } : data;

        const res = await fetch(endpoint, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });

        const result = await res.json();
        if (result.error) {
          showToast(result.error, "error");
        } else {
          showToast(isEditing ? "Student updated successfully!" : "Student added successfully!", "success");
          form.reset();
          isEditing = false;
          document.getElementById('submit-btn').textContent = 'Add Student';
          document.getElementById('cancel-btn').classList.add('hidden');
          setTimeout(() => location.reload(), 2000);
        }
      } catch (error) {
        showToast("Network error: " + error.message, "error");
      }
    });

    // Edit functionality
    document.querySelectorAll('.edit-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const b = e.target;
        document.getElementById('edit-student-id').value = b.dataset.id;
        document.getElementById('name').value = b.dataset.name;
        document.getElementById('email').value = b.dataset.email;
        document.getElementById('student_id').value = b.dataset.studentid;
        document.getElementById('course').value = b.dataset.course || '';
        isEditing = true;
        document.getElementById('submit-btn').textContent = 'Update Student';
        document.getElementById('cancel-btn').classList.remove('hidden');
        document.getElementById('student-form').scrollIntoView({ behavior: 'smooth' });
        showToast(`Editing ${b.dataset.name}, Email: ${b.dataset.email}`, "edit");
      });
    });

    // Cancel edit
    document.getElementById('cancel-btn').addEventListener('click', () => {
      document.getElementById('student-form').reset();
      document.getElementById('edit-student-id').value = '';
      isEditing = false;
      document.getElementById('submit-btn').textContent = 'Add Student';
      document.getElementById('cancel-btn').classList.add('hidden');
      showToast("Edit cancelled", "cancel");
    });

    // Delete functionality
    document.querySelectorAll('.delete-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const button = e.target;
        const id = button.dataset.id;
        const name = button.dataset.name;

        if (!confirm(`Are you sure you want to delete ${name}?`)) return;

        try {
          const res = await fetch('../api/delete-student', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id })
          });

          const result = await res.json();

          if (result.error) {
            showToast(result.error, "error");
          } else {
            showToast("Student deleted successfully!", "delete");
            setTimeout(() => location.reload(), 2000);
          }
        } catch (error) {
          showToast("Network error: " + error.message, "error");
        }
      });
    });
  </script>

  <style>
    @keyframes fade-in-down {
      0% { opacity: 0; transform: translateY(-10px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in-down {
      animation: fade-in-down 0.3s ease-out;
    }
  </style>
</Layout>