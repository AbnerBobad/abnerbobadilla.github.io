---
//base layout for the webpages
import Layout from '../layouts/Layout.astro';
---


<Layout title="Documentation">
  <section
    class="w-full min-h-screen py-20 md:py-26 bg-linear-to-b from-[#0A0F24] via-[#1B2440] to-[#0F0A14] text-gray-200"
  >
    <h1
      class="text-center text-4xl md:text-6xl font-extrabold tracking-wide mb-16 text-cyan-300"
    >
      Project Documentation
    </h1>

    <div
      class="max-w-6xl mx-auto px-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10"
    >
      <!-- Report -->
      <div
        class="bg-white/10 backdrop-blur-xl rounded-2xl p-8 shadow-xl border border-white/10 hover:border-cyan-300/60 transition duration-300"
      >
        <h2 class="text-2xl font-semibold text-cyan-300 mb-3">
          Written Report
        </h2>
        <p class="text-sm md:text-base leading-relaxed mb-4 opacity-90">
          Download or view our full teams report.
        </p>
        <a
          href="https://drive.google.com/file/d/1BolPp0dTp7RdiWzo7UfLEfeBqwHaLFZ5/view?usp=sharing"
          target="_blank"
          class="inline-block px-5 py-2 bg-cyan-500/20 text-cyan-300 rounded-lg hover:bg-cyan-500/30 transition"
        >
          View Report
        </a>
      </div>

      <!-- Slides -->
      <div
        class="bg-white/10 backdrop-blur-xl rounded-2xl p-8 shadow-xl border border-white/10 hover:border-cyan-300/60 transition duration-300"
      >
        <h2 class="text-2xl font-semibold text-cyan-300 mb-3">
          Presentation Slides
        </h2>
        <p class="text-sm md:text-base leading-relaxed mb-4 opacity-90">
          Access the final presentation slides.
        </p>
        <a
          href="https://drive.google.com/drive/folders/1jfXbHzSyUHyWDTmQP9ruye4l-6-iO6EC?usp=sharing"
          target="_blank"
          class="inline-block px-5 py-2 bg-cyan-500/20 text-cyan-300 rounded-lg hover:bg-cyan-500/30 transition"
        >
          View Slides
        </a>
      </div>

      <!-- Screenshots -->
      <div
        class="bg-white/10 backdrop-blur-xl rounded-2xl p-8 shadow-xl border border-white/10 hover:border-cyan-300/60 transition duration-300"
      >
        <h2 class="text-2xl font-semibold text-cyan-300 mb-3">Screenshots</h2>
        <p class="text-sm md:text-base leading-relaxed mb-4 opacity-90">
          A collection of screenshots showing the project's development, testing
          stages, and results.
        </p>
        <a
          href="https://drive.google.com/drive/folders/16mn8NR5Gw_sUbiL3ML7celhikxb_YpQu?usp=sharing"
          target="_blank"
          class="inline-block px-5 py-2 bg-cyan-500/20 text-cyan-300 rounded-lg hover:bg-cyan-500/30 transition"
        >
          View Screenshots
        </a>
      </div>
    </div>
  </section>
</Layout>
