---
//base layout for the webpages
import Layout from '../layouts/Layout.astro';
---


<Layout title="Video Gallery">
  <section
    class="w-full min-h-screen py-20 md:py-26 bg-linear-to-b from-[#0A0F24] via-[#1B2440] to-[#0F0A14] text-gray-200"
  >
    <h1
      class="text-center text-4xl md:text-6xl font-extrabold tracking-wide mb-16 text-cyan-300"
    >
      Video Gallery
    </h1>
    <!--Grid-->
    <div class="max-w-8xl mx-auto px-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
      <!-- Video 1 -->
      <div
        class="bg-white/10 backdrop-blur-xl rounded-2xl overflow-hidden shadow-xl border border-white/10 hover:border-cyan-300/60 transition duration-300"
      >
        <div class="aspect-video">
          <iframe
            class="w-full h-full rounded-t-2xl"
            src="https://drive.google.com/file/d/1SJs5Wl-R8I7DYF56s6UcfSC-K_vSgkJF/preview"
            title="Video 1 - Programming Language"
            allowfullscreen></iframe>
        </div>
        <div class="p-6 text-center">
          <h2 class="text-2xl font-semibold text-cyan-300">
            FOC - Programming Language
          </h2>
          <p class="text-sm md:text-base leading-relaxed mt-3 opacity-90">
            Programming Languages Overview by Abner Bobadilla
          </p>
        </div>
      </div>

      <!-- Video 2 -->
      <div
        class="bg-white/10 backdrop-blur-xl rounded-2xl overflow-hidden shadow-xl border border-white/10 hover:border-cyan-300/60 transition duration-300"
      >
        <div class="aspect-video">
          <iframe
            class="w-full h-full rounded-t-2xl"
            src="https://drive.google.com/file/d/1A5cvOHgjHcNzdInCnDxJoZxjq00ngJmt/preview"
            title="Video 2 - Software Engineering"
            allowfullscreen></iframe>
        </div>
        <div class="p-6 text-center">
          <h2 class="text-2xl font-semibold text-cyan-300">
            Foc - Software Engineering
          </h2>
          <p class="text-sm md:text-base leading-relaxed mt-3 opacity-90">
            Software Engineering Overview by Valentino Vernon
          </p>
        </div>
      </div>

      <!-- Video 3 -->
      <div
        class="bg-white/10 backdrop-blur-xl rounded-2xl overflow-hidden shadow-xl border border-white/10 hover:border-cyan-300/60 transition duration-300"
      >
        <div class="aspect-video">
          <iframe
            class="w-full h-full rounded-t-2xl"
            src="https://drive.google.com/file/d/1GsNXQpmMTa-RXNdRcbpmrqyMobwyQFug/preview"
            title="Video 3 - Data Storage"
            allowfullscreen></iframe>
        </div>
        <div class="p-6 text-center">
          <h2 class="text-2xl font-semibold text-cyan-300">
            FOC - Data Storage
          </h2>
          <p class="text-sm md:text-base leading-relaxed mt-3 opacity-90">
            Data storage Overview by Carlos Chulin
          </p>
        </div>
      </div>

      <!-- Video 4 -->
      <!-- <div
        class="bg-white/10 backdrop-blur-xl rounded-2xl overflow-hidden shadow-xl border border-white/10 hover:border-cyan-300/60 transition duration-300"
      >
        <div class="aspect-video">
          <iframe
            class="w-full h-full rounded-t-2xl"
            src="https://www.youtube.com/embed/VIDEO_ID_2"
            title="Video 4 - "
            allowfullscreen></iframe>
        </div>
        <div class="p-6 text-center">
          <h2 class="text-2xl font-semibold text-cyan-300">Video 4</h2>
          <p class="text-sm md:text-base leading-relaxed mt-3 opacity-90">
            Jadon King Video
          </p>
        </div>
      </div> -->
    </div>
  </section>
</Layout>
