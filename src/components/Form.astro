---
import "../styles/global.css";
---

<section class="min-h-screen flex items-center justify-center bg-linear-to-b from-[#0A0F24] via-[#1B2440] to-[#0F0A14] text-gray-200 py-20">
  <form id="studentForm" class="bg-white/10 backdrop-blur-xl p-8 rounded-2xl shadow-lg border border-white/10 w-full max-w-lg">
    <h2 class="text-3xl font-bold text-cyan-300 text-center mb-6">Student Information Form</h2>

    <div class="space-y-4">
      <div>
        <label class="block mb-1 font-semibold">Full Name</label>
        <input type="text" id="name" name="name" required class="w-full p-3 rounded-lg bg-gray-900 text-gray-100 focus:ring-2 focus:ring-cyan-400 outline-none">
      </div>

      <div>
        <label class="block mb-1 font-semibold">Email</label>
        <input type="email" id="email" name="email" required class="w-full p-3 rounded-lg bg-gray-900 text-gray-100 focus:ring-2 focus:ring-cyan-400 outline-none">
      </div>

      <div>
        <label class="block mb-1 font-semibold">Student ID</label>
        <input type="text" id="studentId" name="studentId" required class="w-full p-3 rounded-lg bg-gray-900 text-gray-100 focus:ring-2 focus:ring-cyan-400 outline-none">
      </div>

       <div>
        <label class="block mb-1 font-semibold">Course</label>
        <input type="text" id="course" name="course" required class="w-full p-3 rounded-lg bg-gray-900 text-gray-100 focus:ring-2 focus:ring-cyan-400 outline-none">
      </div>

      <button type="submit" class="w-full mt-4 py-3 bg-cyan-500/20 text-cyan-300 font-semibold rounded-lg hover:bg-cyan-500/30 transition">
        Submit
      </button>
    </div>

    <p id="message" class="text-center mt-4 text-cyan-300 font-medium"></p>
  </form>
</section>

